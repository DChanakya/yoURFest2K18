<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.usharama.yourfest2018">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/urcelogo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.usharama.yourfest2018.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name="com.usharama.yourfest2018.activities.Technical"
            android:label="@string/title_activity_technical"
            android:parentActivityName="com.usharama.yourfest2018.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.usharama.yourfest2018.activities.MainActivity" />
        </activity>
        <activity
            android:name="com.usharama.yourfest2018.activities.Cultural"
            android:label="@string/title_activity_cultural"
            android:parentActivityName="com.usharama.yourfest2018.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.usharama.yourfest2018.activities.MainActivity" />
        </activity>
        <activity
            android:name="com.usharama.yourfest2018.activities.Register"
            android:label="@string/title_activity_register"
            android:parentActivityName="com.usharama.yourfest2018.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.usharama.yourfest2018.activities.MainActivity" />
        </activity>
        <activity android:name="com.usharama.yourfest2018.activities.SplashScreen"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>